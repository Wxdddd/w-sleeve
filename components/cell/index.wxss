  box-sizing: border-box; /*改变核模型*/
}

.inner-container {
  height: 100%;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  font-size: 24rpx;
}

.forbidden {
  border: 2rpx dashed #bbbbbb;
  color: #bbbbbb;
}

.s-outer {
  border: 2rpx solid #157658;
